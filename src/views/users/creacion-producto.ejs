    <main>

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Creación de Publicación</h2>
                </div>
            </div>
            <div class="col-12">
                
                <form action="/users/crear" method="POST" id="creacion-producto" enctype="multipart/form-data">
                    <div class="row product-detail">

                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label">Categoría:</label>
                            <select name="categoria" id="category" class="form-input">
                                <option value="">Elegí</option>
                                <option value="1">Actividades</option>
                                <option value="2">Publicaciones</option>
                                <option value="3">Investigaciones</option>
                                <option value="4">Docencia</option>
                                <option value="5">Fotos</option>
								
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="titulo" class="form-label">Título:</label>
                            <input type="text" id="titulo" name="titulo" disabled placeholder="Ingresar un título" class="form-input campo-condicional" disabled>
                          </div>
                          

                        <div class="container">
                            <label for="fecha" >Fecha de Creacion</label>
                            <input class="form" type="date" id="fecha" name="fecha_creacion" required disabled>
                        </div>

                        <div class="col-12">
                            <label for="description" class="form-label">Descripción:</label>
                            <textarea type="text" name="descripcion" id="description" class="form-input" disabled></textarea>
                        </div>

						<div class="col-12 col-md-6">
                            <label for="link" class="form-label">Link:</label>
                            <input type="text" id="link" name="link" placeholder="link" class="form-input" disabled>
                        </div>

                        <div class="col-12">
                            <label for="cImage" class="form-label">Cargar imagen:</label>
                            <input type="file" name="imagen" id="cImage" disabled multiple></input>
                        </div>

						<div class="col-12 col-md-6">
                            <label for="tituloLeerMas" class="form-label">Título leer mas:</label>
                            <input type="text" id="tituloLeerMas" name="tituloLeerMas" placeholder="Ingresar un título" class="form-input" disabled>
                        </div>

						<div class="col-12 col-md-6">
                            <label for="subTituloLeerMas" class="form-label">Subtítulo leer mas:</label>
                            <input type="text" id="subTituloLeerMas" name="subTituloLeerMas" placeholder="Ingresar un subtítulo" class="form-input" disabled>
                        </div>

						<div class="col-12">
                            <label for="description1" class="form-label">1er Párrafo:</label>
                            <textarea name="parrafoUnoLeerMas" id="description1" class="form-input" disabled></textarea>
                        </div>

						<div class="col-12">
                            <label for="description2" class="form-label">2do Párrafo:</label>
                            <textarea name="parrafoDosLeerMas" id="description2" class="form-input"disabled></textarea>
                        </div>

                        <div class="col-12">
                            <label for="tema" class="form-label">Tema:</label>
                            <textarea name="tema" id="tema" class="form-input"disabled></textarea>
                        </div>

                        <div class="col-12">
                            <label for="nombre" class="form-label">Nombre:</label>
                            <textarea name="nombre" id="nombre" class="form-input"disabled></textarea>
                        </div>

                        <div class="col-12">
                            <label for="fuente" class="form-label">Fuente:</label>
                            <textarea name="fuente" id="fuente" class="form-input"disabled></textarea>
                        </div>

                        <div id="error">
                        </div>
                        
                        <br><br/>
                        <br><br/>
                        <br><br/>

                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Publicar</button>
                        </div>

                    </div>
                </form>
            </div>

      
    </main>
</body>
