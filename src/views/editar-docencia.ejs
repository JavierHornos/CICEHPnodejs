    <main>

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Edición de Publicación</h2>
                </div>
            </div>
            <div class="col-12">
                
                <form action="/editar-docencia/<%=producto_detallado.Id%>" method="POST" id="creacion-producto">
                    <div class="row product-detail">

                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label">Categoría:</label>
                            <select name="categoria" id="category" class="form-input">
                                <option value="">Elegí</option>
                                <option value="4">Docencia</option>                               
								
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="titulo" class="form-label">Título:  <%= producto_detallado.titulo %></label>
                            <input type="text" id="titulo" name="titulo"  placeholder="Ingresar un título" class="form-input campo-condicional">
                          </div>
                          

                        <div class="container">
                            <label for="fecha" >Fecha de Creacion:  <%= producto_detallado.fecha_creacion %></label>
                            <input class="form" type="date" id="fecha" name="fecha_creacion" required>
                        </div>

                        <div class="col-12">
                            <label for="description" class="form-label">Descripción:  <%= producto_detallado.descripcion %></label>
                            <textarea type="text" name="descripcion" id="description" class="form-input"></textarea>
                        </div>

						<div class="col-12 col-md-6">
                            <label for="link" class="form-label">Link:  <%= producto_detallado.link %></label>
                            <input type="text" id="link" name="link" placeholder="link" class="form-input">
                        </div>

                        <div id="error">
                        </div>
                        
                        <br><br/>
                        <br><br/>
                        <br><br/>

                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Editar</button>
                        </div>

                    </div>
                </form>
            </div>

      
    </main>
</body>
